<%- include('partials/header') %>

<h2 class="mb-4 text-primary">Libros más prestados por autor</h2>

<!-- Lista de préstamos -->
<ul class="list-group mb-4 shadow-sm">
  <% if (autor.length > 0) { %>
    <% autor.forEach ( prautor => { %>
      <li class="list-group-item d-flex justify-content-between align-items-center"> 
        <span><strong><%= prautor.total %></strong>       <%= prautor.nombre %></span>
      </li>
    <% }); %>
  <% } else { %>
    <li class="list-group-item text-muted">No hay nada</li>
  <% } %>
</ul>
<%- include('partials/footer') %>
