<%- include('partials/header') %>

<h2 class="mb-4 text-primary">Consulta #9</h2>

<!-- Lista de libros -->
<ul class="list-group mb-4 shadow-sm">
  <% if (Array.isArray(libros) && libros.length > 0) { %>
    <% libros.forEach(libro => { %>
      <li class="list-group-item d-flex justify-content-between align-items-start flex-column flex-md-row">
        <div>
          <strong>Titulo: <em><%= libro.titulo %> </em></strong><br>
          <small>Precio: <%= libro.precio || 'Desconocida' %></small><br>
          <small>Paginas: <%= libro.paginas || 'Desconocido' %></small><br>
          <small>Dibujos: <%= libro.dibujos %></small><br>
        </div>
      </li>
    <% }); %>
  <% } else { %>
    <li class="list-group-item text-muted">No hay libros registrados.</li>
  <% } %>
</ul>

<%- include('partials/footer') %>
